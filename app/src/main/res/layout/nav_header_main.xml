<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@mipmap/nav_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">

    <com.weily.weily.PublicMethod.CircleImageView
        android:layout_width="@dimen/navigation_view_head_size"
        android:id="@+id/nav_head"
        android:src="@mipmap/ic_launcher"
        android:layout_height="@dimen/navigation_view_head_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/hint_click"
        android:textSize="@dimen/navigation_view_hint_text"
        android:textColor="@color/navigationView_Username"
        android:id="@+id/nav_username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>
