<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <ImageView
            android:id="@+id/show_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_head_height"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/show_name"
                android:layout_width="@dimen/dialog_icon_size"
                android:layout_height="@dimen/dialog_icon_size"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_name"/>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_icon_size"
                android:layout_marginStart="@dimen/dialog_name_start_margin"
                android:layout_toEndOf="@id/show_name"
                android:textSize="@dimen/dialog_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/show_college"
                android:layout_width="@dimen/dialog_icon_size"
                android:layout_height="@dimen/dialog_icon_size"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_collage"/>

            <TextView
                android:id="@+id/text_collage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_icon_size"
                android:layout_marginStart="@dimen/dialog_name_start_margin"
                android:layout_toEndOf="@id/show_college"
                android:textSize="@dimen/dialog_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/show_class_number"
                android:layout_width="@dimen/dialog_icon_size"
                android:layout_height="@dimen/dialog_icon_size"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_class_number"/>

            <TextView
                android:id="@+id/text_class"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_icon_size"
                android:layout_marginStart="@dimen/dialog_name_start_margin"
                android:layout_toEndOf="@id/show_class_number"
                android:textSize="@dimen/dialog_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/show_phone_number"
                android:layout_width="@dimen/dialog_icon_size"
                android:layout_height="@dimen/dialog_icon_size"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_phone_number"/>

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_icon_size"
                android:layout_marginStart="@dimen/dialog_name_start_margin"
                android:layout_toEndOf="@id/show_phone_number"
                android:textSize="@dimen/dialog_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/show_profession"
                android:layout_width="@dimen/dialog_icon_size"
                android:layout_height="@dimen/dialog_icon_size"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_profession"/>

            <TextView
                android:id="@+id/text_profession"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_icon_size"
                android:layout_marginStart="@dimen/dialog_name_start_margin"
                android:layout_toEndOf="@id/show_profession"
                android:textSize="@dimen/dialog_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/show_occupation"
                android:layout_width="@dimen/dialog_icon_size"
                android:layout_height="@dimen/dialog_icon_size"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_occupation"/>

            <TextView
                android:id="@+id/text_occupation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_icon_size"
                android:layout_marginStart="@dimen/dialog_name_start_margin"
                android:layout_toEndOf="@id/show_occupation"
                android:textSize="@dimen/dialog_text_size"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>